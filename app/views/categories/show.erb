<!-- /categories/show -->
<h1>Welcome, <%= Helpers.current_user(session).name %> to Recipe Box</h1>

<h3>Category <%= @category.name</h3>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<table>
  <tr>
    <th> User name </th>
    <th> Recipe Name </th>
    <th> Recipe Description </th>
    <th> View </th>
  </tr>

  <% @category.recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.user.name %></td>
      <td><%= recipe.name %></td>
      <td><%= recipe.description %></td>
      <td><a href="/recipes/<%= recipe.slug %>">View</a></td>
    </tr>
  <% end %>
<table>

<br></br>

<!-- Link to Create New Tweet -->
<form action="/recipes/new" method="GET">
  <input type="submit" value="New Recipe">
</form>

<!-- Link to Log Out -->
<form action="/logout" method="GET">
  <input type="submit" id="logout" value="Log Out">
</form>

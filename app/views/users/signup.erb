<!-- /users/signup -->

<h1>Welcome to Recipe Box</h1>

<h3>Sign Up</h3>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form action="/signup" method="POST">
  <p>Username: <input type="text" name="name" id="name" required></p>
  <p>Email: <input type="text" name="email" id="email" autocomplete="off" required></p>
  <p>Password: <input type="password" name="password" id="password" required></p>
  <input type="submit" id="submit" value="Sign Up">
</form>

<p>Already a member? <a href="/login">Log In here</a><p>

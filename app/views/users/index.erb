<!-- /users/index -->

<h1>Welcome, <%= Helpers.current_user(session).name %> to Recipe Box</h1>

<h3> Recipes Listing by Users</h3>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<table>
  <tr>
    <th> User Name </th>
    <th> # Recipes Contributed </th>
    <th> View </th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.recipes.count %></td>
      <td><a href="/users/<%= user.slug %>">View</a></td>
    </tr>
  <% end %>
<table>

<br></br>

<!-- Link to View Users Recipes-->
<form action="/recipes" method="get">
  <input type="submit" id="submit" value="View Your Recipes">
</form>

<!-- Link to Create New Recipe -->
<form action="/recipes/new" method="GET">
  <input type="submit" value="New Recipe">
</form>

<!-- Link to Log Out -->
<form action="/logout" method="GET">
  <input type="submit" id="logout" value="Log Out">
</form>

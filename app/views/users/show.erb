<!-- /users/show -->
<h1>Welcome, <%= Helpers.current_user(session).name %> to Recipe Box</h1>

<h3>Your Recipe Box</h3>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<table>
  <tr>
    <th> Recipe Id </th>
    <th> Name </th>
    <th> Description </th>
    <th> View </th>
  </tr>

  <% @user.recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.id %></td>
      <td><%= recipe.name %></td>
      <td><%= recipe.description %></td>
      <td><a href="/recipes/<%= recipe.slug %>">View</a></td>
    </tr>
  <% end %>
<table>

<br></br>

<!-- Link to Create New recipe -->
<form action="/recipes/new" method="GET">
  <input type="submit" value="New Recipe">
</form>

<!-- Link to View User Recipes -->
<form action="/users" method="get">
  <input type="submit" id="submit" value="View Users">
</form>

<!-- Link to Log Out -->
<form action="/logout" method="GET">
  <input type="submit" id="logout" value="Log Out">
</form>

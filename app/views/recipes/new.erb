<!-- /recipes/new -->

<h1>Welcome to Recipe Box</h1>

<h3>New Recipes</h3>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>


<form action="/recipes" method="POST">
  <p>Recipe Name: <input type="text" name="recipe[name]" id="name"></p>

  <p>Description: <input type="text" name="recipe[description]" id="description"></p>

  <p>Prep Time: <input type="integer" name="recipe[prep_time]" id="prep_time"></p>

  <p>Cook Time: <input type="integer" name="recipe[cook_time]" id="cook_time"></p>

  <p>Yield: <input type="text" name="recipe[yield]" id="yield"></p>

  <p>Select Category</p>
  <% @categories.each do |category| %>
    <input type="checkbox" name="recipe[category_ids][]" id="category_<%= category.id %>" value="<%= category.id %>"><%= category.name %></input>
  <% end %>

  <p> And/or Create New Category</p>
  <input type="text" name="category[name]" id="new_category"></input>


  <br></br>

  <input type="submit" id="create" value="Create New Recipe">
</form>

<br></br>

<!-- Return to Index -->
<form action="/recipes" method="GET">
  <input type="submit" value="Go Back to Recipes Listing">
</form>
